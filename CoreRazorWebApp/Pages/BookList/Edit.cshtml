@page
@model CoreRazorWebApp.Pages.BookList.EditModel
@{
}


<h2 class="text-info">Edit book record</h2>

<div class="border container" style="padding:30px;">
    <form method="post">
        <input type="hidden" asp-for="book.Id" />
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="book.Name"></label>
            </div>
            <div class="col-6">
                <input asp-for="book.Name" class="form-control" />
            </div>
            <span asp-validation-for="book.Name"></span>
        </div>

        <div class="form-group row">
            <div class="col-3">
                <label asp-for="book.Autor"></label>
            </div>
            <div class="col-6">
                <input asp-for="book.Autor" class="form-control" />
            </div>
            <span asp-validation-for="book.Autor"></span>
        </div>

        <div class="form-group row">
            <div class=" col-3 offset-4">
                <input type="submit" value="Update" class="btn btn-primary form-control" />
            </div>
            <div class="col-3">
                <a asp-page="index" class="btn btn-success form-control">Back to book list</a>
            </div>
        </div>

    </form>

</div>

@section Scripts{
    <partial name="_validationScriptsPartial" />
}